# PacketBuddy - AI Assistant Navigation Index (TOON)

[meta]
updated = "2026-01-10"
format = "TOON (Token Optimized Object Notation)"
purpose = "Help AI assistants navigate PacketBuddy codebase efficiently"

[start_here]
read_first = "This file explains how to use .agent folder"
then = "quick-reference.toon (for user questions)"
deep_dive = "codebase.toon or architecture.toon (for development)"

[toon_format]
desc = "Token Optimized Object Notation - compact format for LLMs"
benefits = ["~60% fewer tokens than markdown", "Easy to parse", "Structured data", "Fast navigation"]
